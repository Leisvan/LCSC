<UserControl x:Class="LCSC.App.Views.BotUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="using:LCTWorks.WinUI.Xaml.Behaviors"
             xmlns:controls="using:CommunityToolkit.WinUI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="using:LCSC.Core.Helpers"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:lctWorks="using:LCTWorks.WinUI.Controls"
             xmlns:local="using:LCSC.App.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:CommunityToolkit.WinUI"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"
                              MinWidth="340"
                              MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,8"
              Background="{StaticResource AppColor1}"
              CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Padding="16">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon Glyph="&#xE756;" />
                    <TextBlock x:Uid="BotView-BotLogTitle"
                               FontSize="16" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="4">
                    <ToggleButton x:Uid="BotView-AutoScrollButton"
                                  IsChecked="{x:Bind ViewModel.AutoScroll, Mode=TwoWay}" />
                    <Button Command="{x:Bind ViewModel.ConnectBotCommand, Mode=OneWay}"
                            Style="{ThemeResource AccentButtonStyle}"
                            Visibility="{x:Bind ViewModel.IsDisconnected, Mode=OneWay}">
                        <FontIcon Glyph="&#xE768;" />
                    </Button>
                    <Button Command="{x:Bind ViewModel.DisconnectBotCommand, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                        <FontIcon Glyph="&#xE71A;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Padding="16"
                  Background="#101010">
                <ScrollViewer x:Name="TextScrollViewer">
                    <RichTextBlock HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="Cascadia Mono">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:ConsoleMirrorBehavior AutoScroll="{x:Bind ViewModel.AutoScroll, Mode=OneWay}"
                                                             ScrollViewer="{x:Bind TextScrollViewer}" />
                        </interactivity:Interaction.Behaviors>
                    </RichTextBlock>
                </ScrollViewer>
            </Grid>
        </Grid>
        <ScrollViewer Grid.Column="2"
                      Margin="0,8"
                      HorizontalAlignment="Stretch">
            <Grid RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <controls:SettingsExpander x:Uid="BotView-ConfigExpander"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xE713;}"
                                           IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                        <ComboBox MinWidth="220"
                                  ItemsSource="{x:Bind ViewModel.Guilds, Mode=OneWay}"
                                  SelectedItem="{x:Bind ViewModel.SelectedGuild, Mode=TwoWay}" />
                        <Button Command="{x:Bind ViewModel.RefreshCommand}"
                                IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                            <FontIcon Glyph="&#xE895;" />
                        </Button>
                    </StackPanel>
                </controls:SettingsExpander>
                <controls:SettingsExpander x:Uid="BotView-RankingExpander"
                                           Grid.Row="1"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xE902;}"
                                           IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}"
                                           IsExpanded="True">
                    <lctWorks:ThemedButton Command="{x:Bind ViewModel.CancelUpdateRankCommand}"
                                           Content="Cancelar"
                                           Style="{StaticResource DangerThemedButtonStyle}"
                                           Visibility="{x:Bind ViewModel.IsRankingBusy, Mode=OneWay}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard x:Uid="BotView-UpdateAndDisplayCard"
                                               HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <lctWorks:ThemedButton x:Uid="BotView-UpdateAndDisplayButton"
                                                       Command="{x:Bind ViewModel.UpdateAndDisplayRankCommand}"
                                                       IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}"
                                                       Style="{StaticResource AccentThemedButtonStyle}">
                                    <lctWorks:ThemedButton.CommandParameter>
                                        <x:Boolean>False</x:Boolean>
                                    </lctWorks:ThemedButton.CommandParameter>
                                </lctWorks:ThemedButton>
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard x:Uid="BotView-UpdateCard"
                                               HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <Button x:Uid="BotView-UpdateButton"
                                        Command="{x:Bind ViewModel.UpdateRankCommand}"
                                        IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}" />
                                <Button x:Uid="BotView-UpdateForceButton"
                                        Command="{x:Bind ViewModel.UpdateRankForcedCommand}"
                                        IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}" />
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard x:Uid="BotView-DisplayCard"
                                               HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <Button x:Uid="BotView-DisplayButton"
                                        Command="{x:Bind ViewModel.DisplayRankCommand}"
                                        IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                                    <Button.CommandParameter>
                                        <x:Boolean>False</x:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                                <Button x:Uid="BotView-DisplayBannedButton"
                                        Command="{x:Bind ViewModel.DisplayRankCommand}"
                                        IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}">
                                    <Button.CommandParameter>
                                        <x:Boolean>True</x:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard x:Uid="BotView-CleaunpCard"
                                               HorizontalContentAlignment="Stretch">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <lctWorks:ThemedButton x:Uid="BotView-CleanRegionsButton"
                                                       Command="{x:Bind ViewModel.PruneRegionsCommand}"
                                                       IsEnabled="{x:Bind ViewModel.IsRankingIdle, Mode=OneWay}"
                                                       Style="{ThemeResource WarningThemedButtonStyle}" />
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                <controls:SettingsExpander x:Uid="BotView-MessagesExpander"
                                           Grid.Row="2"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xEBDB;}"
                                           IsEnabled="False">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <StackPanel Margin="0,16"
                                            Spacing="8">
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8">
                                        <Button Content="Send message"
                                                Style="{ThemeResource AccentButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>
                            </controls:SettingsCard.Header>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                <controls:SettingsExpander Grid.Row="3"
                                           Header="Debug"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xEC7A;}"
                                           Visibility="{x:Bind helpers:BuildHelper.IsDebugBuild}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <StackPanel Margin="0,16"
                                            Spacing="8">
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8">
                                        <lctWorks:ThemedButton Content="Content"
                                                               Style="{ThemeResource AccentThemedButtonStyle}" />
                                        <lctWorks:ThemedButton Glyph="check_circle"
                                                               GlyphFontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                                               Style="{ThemeResource AccentThemedButtonStyle}" />
                                        <lctWorks:ThemedButton Content="Check"
                                                               Glyph="check_circle"
                                                               GlyphFontFamily="{StaticResource MaterialSymbolsFontFamily}"
                                                               Style="{ThemeResource AccentThemedButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>
                            </controls:SettingsCard.Header>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>