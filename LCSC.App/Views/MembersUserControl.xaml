<UserControl x:Class="LCSC.App.Views.MembersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adapters="using:LCSC.App.Adapters"
             xmlns:common="using:LCTWorks.WinUI.Controls"
             xmlns:core="using:Microsoft.Xaml.Interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ext="using:LCTWorks.WinUI.Controls.Extensions"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:LCSC.Models"
             xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding"
                    Value="0,5" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>
        <XamlUICommand x:Key="NavigateToProfilePageCommand"
                       Command="{x:Bind ViewModel.NavigateToProfilePageCommand}" />
    </UserControl.Resources>

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.InitializeCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"
                              MinWidth="340"
                              MaxWidth="500" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="8"
              RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Padding="8"
                  Background="{StaticResource AppColor3}"
                  ColumnSpacing="8"
                  CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <AutoSuggestBox PlaceholderText="Buscar"
                                QueryIcon="Find"
                                Text="{x:Bind ViewModel.SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">

                    <Button Grid.Column="1"
                            VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.RefreshCommand}"
                            Content="Actualizar">
                        <Button.CommandParameter>
                            <x:Boolean>True</x:Boolean>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Background="{StaticResource AppColor3}"
                  CornerRadius="8">
                <ListView Padding="4,8"
                          ItemsSource="{x:Bind ViewModel.Members, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedMember, Mode=TwoWay}">

                    <ListView.ItemTemplate>

                        <DataTemplate x:DataType="models:MemberModel">
                            <Grid Padding="6"
                                  Background="{StaticResource AppColor4}"
                                  CornerRadius="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid Width="56"
                                      Height="56">
                                    <Ellipse Stroke="{StaticResource AppColor2}"
                                             StrokeThickness="2">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{x:Bind adapters:VisualAdapters.ToMemberPictureImageSource(Record.PictureUrl, Race, 128), Mode=OneWay}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Border Width="24"
                                            Height="24"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Background="{x:Bind adapters:VisualAdapters.ToMemberStateBackgroundBrush(Record, ValidProfiles), Mode=OneWay}"
                                            BorderBrush="{StaticResource AppColor4}"
                                            BorderThickness="2"
                                            CornerRadius="16"
                                            Visibility="{x:Bind adapters:VisualAdapters.ToMemberStateVisibility(Record.Verified, Record.Banned), Mode=OneWay}">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="{StaticResource MaterialIconsRegular}"
                                                   FontSize="16"
                                                   Text="{x:Bind adapters:VisualAdapters.ToMemberStateIconGlyph(Record.Verified, Record.Banned, ValidProfiles), Mode=OneWay}"
                                                   TextAlignment="Center"
                                                   TextLineBounds="Tight" />
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="1"
                                      Margin="16,0,0,8"
                                      VerticalAlignment="Center"
                                      ColumnSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource AppItemMainTextStyle}"
                                               Text="{x:Bind Record.Nick}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.ColumnSpan="2"
                                               Style="{StaticResource AppItemSecondaryTextStyle}"
                                               Text="{x:Bind Record.RealName}" />
                                    <Image Grid.Column="1"
                                           Width="24"
                                           Height="24"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Source="{x:Bind adapters:VisualAdapters.ToRegionLeagueBadgePath(BestRegion, x:False), Mode=OneWay}" />
                                </Grid>

                                <Grid Grid.Column="2"
                                      Width="48"
                                      Height="48"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Image Opacity=".1"
                                           Source="{x:Bind adapters:VisualAdapters.ToRaceImageSource(Race, 128), Mode=OneWay}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border Background="{StaticResource AppColor3}"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                    <ProgressRing IsActive="True" />
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Column="1"
              Padding="8"
              ColumnSpacing="8"
              RowSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".2*"
                                  MinWidth="400" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width=".4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="2"
                  Padding="32"
                  RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Width="128"
                      Height="128"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Ellipse Stroke="{StaticResource AppColor1}"
                             StrokeThickness="4">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{x:Bind adapters:VisualAdapters.ToMemberPictureImageSource(ViewModel.SelectedMember.Record.PictureUrl, ViewModel.SelectedMember.Race, 128), Mode=OneWay}" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource AppHeaderTextStyle}"
                               Text="{x:Bind ViewModel.SelectedMember.Nick, Mode=OneWay}" />
                    <TextBlock Grid.Row="1"
                               ext:TextBlockExtensions.HideIfTextEmpty="True"
                               FontSize="16"
                               Style="{StaticResource AppSubheaderTextStyle}"
                               Text="{x:Bind ViewModel.SelectedMember.Record.RealName, Mode=OneWay}" />

                    <StackPanel Grid.Row="2"
                                Margin="0,8"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="4">
                        <common:Chip Background="{StaticResource Tag2Color}"
                                     Foreground="{StaticResource TextColorDark1}"
                                     Text="{x:Bind ViewModel.SelectedMember.Race, Mode=OneWay}" />
                        <common:Chip Background="{StaticResource Tag1Color}"
                                     Foreground="{StaticResource TextColorDark1}"
                                     Text="{x:Bind ViewModel.SelectedMember.Record.CountryTag, Mode=OneWay}" />
                        <common:Chip Background="{StaticResource SuccessColor}"
                                     Text="Verificado"
                                     Visibility="{x:Bind ViewModel.SelectedMember.Record.Verified, Mode=OneWay}" />
                        <common:Chip Background="{StaticResource ErrorColor}"
                                     Text="Expulsado"
                                     Visibility="{x:Bind ViewModel.SelectedMember.Record.Banned, Mode=OneWay}" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="1"
                  MaxWidth="320"
                  Padding="32"
                  Background="{StaticResource AppColor1}"
                  CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Width="96"
                       Height="96"
                       Source="{x:Bind adapters:VisualAdapters.ToRegionLeagueBadgePath(ViewModel.SelectedMember.BestRegion, x:True), Mode=OneWay}" />
                <TextBlock Grid.Row="1"
                           Foreground="{StaticResource Tag4Color}"
                           Style="{StaticResource AppSubheaderTextStyle}"
                           Text="{x:Bind adapters:StringAdapters.ToRegionDisplayName(ViewModel.SelectedMember.BestRegion), Mode=OneWay}" />
                <TextBlock Grid.Row="2"
                           FontWeight="Bold"
                           Style="{StaticResource AppHeaderTextStyle}"
                           Text="{x:Bind ViewModel.SelectedMember.BestRegion.CurrentMMR, Mode=OneWay}" />
                <StackPanel Grid.Row="3"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontFamily="{StaticResource MaterialIconsRegular}"
                               Style="{StaticResource AppSubheaderTextStyle}"
                               Text="expand_all"
                               TextLineBounds="Tight" />
                    <TextBlock Style="{StaticResource AppSubheaderTextStyle}"
                               Text="{x:Bind ViewModel.SelectedMember.BestRegion.PreviousMMR, Mode=OneWay}" />
                </StackPanel>
                <TextBlock Grid.Row="4"
                           Margin="0,32,0,0"
                           Foreground="{StaticResource Tag1Color}"
                           Style="{StaticResource AppSubheaderTextStyle}"
                           Text="{x:Bind ViewModel.SeasonString, Mode=OneWay}"
                           TextAlignment="Center" />
                <Grid Grid.Row="5"
                      Margin="8"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <Grid Padding="16,8"
                          HorizontalAlignment="Center"
                          BorderThickness="2"
                          CornerRadius="8">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource AppItemSecondaryTextStyle}"
                                   Text="Partidas"
                                   TextAlignment="Center" />
                        <TextBlock Grid.Row="1"
                                   Style="{StaticResource AppHeaderTextStyle}"
                                   Text="{x:Bind ViewModel.SelectedMember.BestRegion.TotalMatches, Mode=OneWay}" />
                    </Grid>
                    <Rectangle Grid.Column="1"
                               Width="2"
                               Margin="0,8"
                               Fill="{StaticResource AppColor4}" />
                    <Grid Grid.Column="2"
                          Padding="16,8"
                          BorderThickness="2"
                          CornerRadius="8">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource AppItemSecondaryTextStyle}"
                                   Text="Winrate"
                                   TextAlignment="Center" />
                        <TextBlock Grid.Row="1"
                                   Style="{StaticResource AppHeaderTextStyle}"
                                   Text="{x:Bind ViewModel.SelectedMember.Winrate, Mode=OneWay}" />
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1"
                  Padding="32"
                  Background="{StaticResource AppColor1}"
                  CornerRadius="8"
                  RowSpacing="24"
                  Visibility="{x:Bind ViewModel.SelectedMember.InvalidBestRegion, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Width="96"
                       Height="96"
                       VerticalAlignment="Bottom"
                       Source="/Assets/Leagues/Placement.png" />
                <TextBlock Grid.Row="1"
                           MaxWidth="220"
                           VerticalAlignment="Top"
                           Style="{StaticResource AppSubheaderTextStyle}"
                           Text="No hay datos para la temporada actual."
                           TextAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="WrapWholeWords" />
            </Grid>
            <Grid Grid.Column="2"
                  Background="{StaticResource AppColor3}"
                  CornerRadius="8">
                <StackPanel Margin="16"
                            VerticalAlignment="Bottom"
                            Spacing="8">
                    <TextBlock>
                        <Run Text="1er lugar:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.Place1Count, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="2do lugar:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.Place2Count, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="3er lugar:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.Place3Count, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="4to lugar:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.Place4Count, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Participaciones:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.Participations, Mode=OneWay}" />
                    </TextBlock>

                    <Rectangle Height="1"
                               Margin="0,8"
                               HorizontalAlignment="Stretch"
                               Fill="{StaticResource AppColor4}" />
                    <TextBlock>
                        <Run Text="Winrate total:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.TotalWinrate, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Terran winrate:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.TerranWinrate, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Zerg winrate:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.ZergWinrate, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Protoss winrate:" />
                        <Run FontWeight="Bold"
                             Text="{x:Bind ViewModel.SelectedMember.Stats.ProtossWinrate, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Padding="16,8"
                      Background="{StaticResource AppColor3}"
                      ColumnSpacing="8"
                      CornerRadius="8">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                               Text="Perfiles" />
                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="4">
                        <Button VerticalAlignment="Stretch"
                                ToolTipService.ToolTip="Agregar nuevo perfil a este jugador">
                            <Button.Flyout>
                                <Flyout Placement="Left">
                                    <Grid ColumnSpacing="8"
                                          RowSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.ColumnSpan="2"
                                                   Margin="0,0,0,16"
                                                   FontSize="16"
                                                   Text="NUEVO PERFIL" />
                                        <TextBox Grid.Row="1"
                                                 Header="BattleTag"
                                                 IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                 Text="{x:Bind ViewModel.ProfileCreator.BattleTag, Mode=TwoWay}" />
                                        <Grid Grid.Row="1"
                                              Grid.Column="1"
                                              Width="42"
                                              Height="32"
                                              VerticalAlignment="Bottom">
                                            <Button HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Command="{x:Bind ViewModel.ProfileCreator.SearchCommand}"
                                                    Visibility="{x:Bind adapters:VisualAdapters.ToReverseBoolVisibility(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}">
                                                <TextBlock FontFamily="{StaticResource MaterialIconsRegular}"
                                                           Text="search" />
                                            </Button>
                                            <ProgressRing IsActive="True"
                                                          Visibility="{x:Bind ViewModel.ProfileCreator.IsSearching, Mode=OneWay}" />
                                        </Grid>

                                        <TextBox Grid.Row="2"
                                                 Grid.ColumnSpan="2"
                                                 Header="PulseId"
                                                 IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                 Text="{x:Bind ViewModel.ProfileCreator.PulseId, Mode=TwoWay}" />
                                        <TextBox Grid.Row="3"
                                                 Grid.ColumnSpan="2"
                                                 Header="ProfileRealm"
                                                 IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                 Text="{x:Bind ViewModel.ProfileCreator.ProfileRealm, Mode=TwoWay}" />
                                        <TextBox Grid.Row="4"
                                                 Grid.ColumnSpan="2"
                                                 Header="ProfileId"
                                                 IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                 Text="{x:Bind ViewModel.ProfileCreator.ProfileId, Mode=TwoWay}" />
                                        <TextBox Grid.Row="5"
                                                 Grid.ColumnSpan="2"
                                                 Header="Notes"
                                                 IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                 Text="{x:Bind ViewModel.ProfileCreator.Notes, Mode=TwoWay}" />
                                        <Button Grid.Row="6"
                                                Grid.ColumnSpan="2"
                                                Width="120"
                                                Margin="0,8,0,0"
                                                HorizontalAlignment="Right"
                                                Command="{x:Bind ViewModel.AddProfileCommand}"
                                                Content="Agregar"
                                                IsEnabled="{x:Bind adapters:VisualAdapters.ToReverseBool(ViewModel.ProfileCreator.IsSearching), Mode=OneWay}"
                                                Style="{StaticResource AccentButtonStyle}" />
                                    </Grid>
                                </Flyout>
                            </Button.Flyout>
                            <Button.Content>
                                <TextBlock FontFamily="{StaticResource MaterialIconsRegular}"
                                           Text="add" />
                            </Button.Content>
                        </Button>
                        <Button VerticalAlignment="Stretch"
                                Command="{x:Bind ViewModel.UpdateRegionsCommand}"
                                ToolTipService.ToolTip="Actualizar MMR en las cuentas de este jugador">
                            <Button.Content>
                                <TextBlock FontFamily="{StaticResource MaterialIconsRegular}"
                                           Text="metabolism" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
                <ListView Grid.Row="1"
                          IsItemClickEnabled="True"
                          ItemsSource="{x:Bind ViewModel.SelectedMember.Profiles, Mode=OneWay}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:BattleNetProfileModel">
                            <Grid Margin="2"
                                  Padding="32,8,8,8"
                                  Background="{StaticResource AppColor1}"
                                  CornerRadius="8">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Image Grid.RowSpan="3"
                                           Width="48"
                                           Height="48"
                                           VerticalAlignment="Center"
                                           Source="ms-appx:///Assets/Images/bnet.png" />
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal"
                                                Spacing="4">
                                        <TextBlock FontSize="18"
                                                   Text="{x:Bind Record.BattleTag}"
                                                   ToolTipService.ToolTip="{x:Bind Record.Notes}" />
                                        <TextBlock VerticalAlignment="Center"
                                                   FontFamily="{StaticResource MaterialIconsRegular}"
                                                   Foreground="{StaticResource Tag1Color}"
                                                   Text="verified"
                                                   ToolTipService.ToolTip="Perfil principal"
                                                   Visibility="{x:Bind Record.MainProfile}" />
                                    </StackPanel>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Opacity=".4"
                                               TextLineBounds="Tight">
                                        <Run Text="BNET:" />
                                        <Run Text="{x:Bind Record.ProfileRealm}" />
                                        <Run Text="/" />
                                        <Run Text="{x:Bind Record.ProfileId}" />
                                    </TextBlock>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Opacity=".4"
                                               TextLineBounds="Tight">
                                        <Run Text="Pulse:" />
                                        <Run Text="{x:Bind Record.PulseId}" />
                                    </TextBlock>
                                    <TextBlock Grid.RowSpan="3"
                                               Grid.Column="2"
                                               VerticalAlignment="Center"
                                               Text="{x:Bind BestMMR, Mode=OneWay}" />
                                    <Button Grid.RowSpan="3"
                                            Grid.Column="3"
                                            Width="56"
                                            VerticalAlignment="Stretch"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{StaticResource NavigateToProfilePageCommand}"
                                            CommandParameter="{x:Bind Record.PulseId}"
                                            ToolTipService.ToolTip="Abrir perfil en Sc2Pulse.com">
                                        <TextBlock FontFamily="{StaticResource MaterialIconsRegular}"
                                                   Text="open_in_new" />
                                    </Button>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="ItemClick">
                            <core:InvokeCommandAction Command="{x:Bind ViewModel.CopyBattleTagCommand}" />
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </ListView>
                <Grid Grid.RowSpan="2"
                      Background="{StaticResource AppColor3}"
                      Visibility="{x:Bind ViewModel.IsLoadingCurrentMember, Mode=OneWay}">
                    <ProgressRing IsActive="True" />
                </Grid>
            </Grid>
        </Grid>
        <toolkit:GridSplitter Grid.Column="1"
                              Height="32"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              ResizeBehavior="BasedOnAlignment"
                              ResizeDirection="Auto">
            <toolkit:GridSplitter.RenderTransform>
                <TranslateTransform Y="-7" />
            </toolkit:GridSplitter.RenderTransform>
        </toolkit:GridSplitter>
        <Grid Grid.Column="1"
              Background="{ThemeResource AppColor2}"
              Visibility="{x:Bind ViewModel.NoMemberSelected, Mode=OneWay}">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource MaterialIconsRegular}"
                       Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="select" />
        </Grid>
    </Grid>
</UserControl>