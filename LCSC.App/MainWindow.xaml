<winex:WindowEx x:Class="LCSC.App.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="using:LCSC.App"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:views="using:LCSC.App.Views"
                xmlns:winex="using:WinUIEx"
                Title="LCSC"
                MinWidth="800"
                MinHeight="600"
                Activated="{x:Bind ViewModel.Activated, Mode=OneWay}"
                mc:Ignorable="d">

    <Grid Background="{StaticResource AppColor2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Title bar  -->
        <Grid x:Name="TitleBar"
              Background="{StaticResource AppColor1}">
            <Image Height="24"
                   Margin="16,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Source="ms-appx:///Assets/Images/LCSC.png" />
        </Grid>
        <Pivot Grid.Row="1"
               Margin="8,0"
               Padding="0"
               IsEnabled="{x:Bind ViewModel.IsEnabled, Mode=OneWay}">
            <PivotItem x:Uid="Shell-MembersTab"
                       Visibility="{x:Bind ViewModel.IsMembersViewEnabled, Mode=OneWay}">
                <views:MembersUserControl />
            </PivotItem>

            <PivotItem x:Uid="Shell-TournamentsTab"
                       Visibility="{x:Bind ViewModel.IsTournamentsViewEnabled, Mode=OneWay}">
                <views:TournamentsUserControl />
            </PivotItem>
            <PivotItem x:Uid="Shell-BotTab"
                       Visibility="{x:Bind ViewModel.IsBotViewEnabled, Mode=OneWay}">
                <views:BotUserControl />
            </PivotItem>
        </Pivot>
        <TextBlock Grid.Row="1"
                   Margin="24,8"
                   HorizontalAlignment="Right"
                   Opacity=".6"
                   Text="{x:Bind ViewModel.AppVersionNotification, Mode=OneWay}" />
    </Grid>
</winex:WindowEx>